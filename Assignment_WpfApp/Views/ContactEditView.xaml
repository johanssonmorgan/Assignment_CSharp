<UserControl x:Class="Assignment_WpfApp.Views.ContactEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Assignment_WpfApp.Views"
             xmlns:viewmodels="clr-namespace:Assignment_WpfApp.ViewModels"
             xmlns:models="clr-namespace.Business.Models;assembly=Business"
             d:DataContext="{d:DesignInstance Type=viewmodels:ContactEditViewModel}"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="650" d:DesignWidth="400">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Edit Contact" FontSize="20" FontWeight="Bold" />

        <StackPanel Grid.Row="1" Margin="0 20 0 0">
            <TextBlock Text="First Name" />
            <TextBox Text="{Binding Contact.FirstName}" Margin="0 0 0 10" Padding="4" />

            <TextBlock Text="Last Name" />
            <TextBox Text="{Binding Contact.LastName}" Margin="0 0 0 10" Padding="4" />

            <TextBlock Text="Email" />
            <TextBox Text="{Binding Contact.Email}" Margin="0 0 0 10" Padding="4" />

            <TextBlock Text="Phone" />
            <TextBox Text="{Binding Contact.Phone}" Margin="0 0 0 10" Padding="4" />

            <TextBlock Text="Street Address" />
            <TextBox Text="{Binding Contact.StreetAddress}" Margin="0 0 0 10" Padding="4" />

            <TextBlock Text="Postal Code" />
            <TextBox Text="{Binding Contact.PostalCode}" Margin="0 0 0 10" Padding="4" />

            <TextBlock Text="City" />
            <TextBox Text="{Binding Contact.City}" Margin="0 0 0 10" Padding="4" />
        </StackPanel>

        <StackPanel Grid.Row="2">
            <Button Command="{Binding SaveCommand}" Content="Save" Margin="0 10 0 5" Padding="5" />
            <Button Command="{Binding DeleteCommand}" Content="Delete contact" Padding="5"/>
            <Button Command="{Binding CancelCommand}" Content="Cancel" Margin="0 5 0 10" Padding="5" />
        </StackPanel>
    </Grid>
</UserControl>